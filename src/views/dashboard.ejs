<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - SecureCorp Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">SecureCorp Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar / User Info -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        User Profile
                    </div>
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Profile Picture">
                        <h5 class="card-title"><%= user.username %></h5>
                        <p class="card-text text-muted">ID: <%= user.id %></p>
                        
                        <hr>
                        
                        <!-- VULNERABILITY: IDOR (Insecure Direct Object Reference) -->
                        <!-- The user_id is exposed in a hidden field and used for password updates -->
                        <h6 class="text-start">Change Password</h6>
                        <form action="/change-password" method="POST">
                            <div class="mb-3 text-start">
                                <label class="form-label">New Password</label>
                                <input type="password" class="form-control" name="new_password" required>
                            </div>
                            
                            <!-- HIDDEN VULNERABLE INPUT -->
                            <!-- Hacker can change this value to update another user's password -->
                            <input type="hidden" name="user_id" value="<%= user.id %>">
                            
                            <button type="submit" class="btn btn-warning w-100">Update Password</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="bi bi-cloud-upload"></i> Document Management
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Upload Employee Documents</h5>
                        <p class="card-text">Please upload your monthly reports or expense receipts here.</p>
                        
                        <% if (locals.message) { %>
                            <div class="alert alert-info"><%- message %></div>
                        <% } %>

                        <!-- VULNERABILITY: Unrestricted File Upload -->
                        <!-- No client-side validation on file types -->
                        <form action="/upload" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="file" class="form-label">Select File</label>
                                <input class="form-control" type="file" id="file" name="file">
                                <div class="form-text">Supported formats: PDF, DOCX, JPG, PNG.</div>
                            </div>
                            <button type="submit" class="btn btn-success">Upload Document</button>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-folder"></i> My Documents
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <% if (locals.files && files.length > 0) { %>
                                <% files.forEach(function(file) { %>
                                    <a href="/uploads/<%= file %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" target="_blank">
                                        <span><i class="bi bi-file-earmark-text me-2"></i> <%= file %></span>
                                        <span class="badge bg-secondary rounded-pill">View</span>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <p class="text-muted text-center my-3">No documents uploaded yet.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>